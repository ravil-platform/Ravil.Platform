@using Microsoft.AspNetCore.Mvc.TagHelpers

@model ViewModels.AdminPanel.Comment.CreateAnswerCommentViewModel
@{
	int commentId = (int)ViewData["commentId"]!;
	string userIp = (string)ViewData["userIp"]!;
}
<form asp-controller="Comment" asp-action="CreateAnswerComment" method="post">
	<input type="hidden" asp-for="CommentId" value="@commentId" />
	<input type="hidden" asp-for="IsAdminAnswer" value="true" />
	<input type="hidden" asp-for="AdminId" value="@User.Identity!.GetUserId()" />
	<input type="hidden" asp-for="UserIp" value="@userIp" />
	<input type="hidden" asp-for="FullName" value="ادمین سایت" />
	<div class="modal-body">
		<div class="form-group">
			<div class="controls">
				<label asp-for="AnswerCommentTitle"></label>
				<input asp-for="AnswerCommentTitle" type="text" class="form-control text-left">
				<div class="help-block">
					<span asp-validation-for="AnswerCommentTitle" class="text-danger"></span>
				</div>
			</div>
		</div>
		
		<div class="form-group">
			<div class="controls">
				<label asp-for="AnswerCommentText"></label>
				<input asp-for="AnswerCommentText" type="text" class="form-control text-left">
				<div class="help-block">
					<span asp-validation-for="AnswerCommentText" class="text-danger"></span>
				</div>
			</div>
		</div>
	</div>

	<div class="modal-footer">
		<button type="button" class="btn btn-light-secondary" data-dismiss="modal">
			<i class="bx bx-x d-block d-sm-none"></i>
			<span class="d-none d-sm-block">بستن</span>
		</button>
		<button type="submit" class="btn btn-primary ml-1">
			<i class="bx bx-check d-block d-sm-none"></i>
			<span class="d-none d-sm-block">تایید</span>
		</button>
	</div>
</form>