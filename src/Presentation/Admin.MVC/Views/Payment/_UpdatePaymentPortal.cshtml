@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Constants.Files
@model ViewModels.AdminPanel.Payment.UpdatePaymentPortalViewModel

<form asp-controller="Payment" asp-action="UpdatePaymentPortal" method="post" enctype="multipart/form-data">
    <div class="modal-body">
        <input type="hidden" asp-for="Id" />
        <div class="card-title-details d-flex align-items-center mb-1 ml-1">
            <div class="avatar bg-rgba-primary p-25 mr-2 ml-0">
                <img id="updateSelectImage" class="img-fluid" src="@Paths.PaymentPortal@Model.PictureName" height="70" width="70">
            </div>
            <div class="mt-n25">
                <h5>@(Resources.General.DisplayNames.Picture) فعلی</h5>
            </div>
        </div>

        <div class="form-group">
            <div class="controls">
                <fieldset>
                    <div class="input-group">
                        <div class="custom-file">
                            <input id="updateFile" asp-for="PictureName" type="file" class="custom-file-input" accept="@MimeTypes.Images.ArrayToString()">
                            <label class="custom-file-label">انتخاب @(Resources.General.DisplayNames.Picture)</label>
                        </div>
                    </div>
                </fieldset>
                <div class="help-block">
                    <span asp-validation-for="PictureName" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="controls">
                <label asp-for="Title"></label>
                <input asp-for="Title" type="text" class="form-control">
                <div class="help-block">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-light-secondary" data-dismiss="modal">
            <i class="bx bx-x d-block d-sm-none"></i>
            <span class="d-none d-sm-block">بستن</span>
        </button>
        <button type="submit" class="btn btn-primary ml-1">
            <i class="bx bx-check d-block d-sm-none"></i>
            <span class="d-none d-sm-block">تایید</span>
        </button>
    </div>
</form>