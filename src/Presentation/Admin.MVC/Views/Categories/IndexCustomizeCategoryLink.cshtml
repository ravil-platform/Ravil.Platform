@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ICollection<Domain.Entities.Category.Target>
@{
    ViewData["Title"] = "شخصی سازی لینک ها";
    ViewData["selected"] = "Categories_IndexCustomizeCategoryLinks";
    int counter = 1;
}

<a asp-controller="Categories" asp-action="CreateCustomizeCategoryLinks" class="btn btn-success mb-2"> افزودن لینک دهی جدید <i class="bx bx-plus"></i></a>

<section>
    <div class="card">
        <div class="table-responsive">
            <div class="dataTables_wrapper no-footer">
                <table class="table mb-0 table-striped table-hover no-footer">
                    <thead class="thead-dark">
                        <tr>
                            <th>ردیف</th>
                            <th>مبدا</th>
                            <th>مقصد</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@counter</td>
                                <td>@item.OriginCategoryName</td>
                                <td>@item.DestinationCategoryName</td>
                                <td>
                                    <a asp-controller="Categories" asp-action="DeleteCustomizeCategoryLinks" asp-route-targetId="@item.Id" data-toggle="tooltip" data-placement="top" data-original-title="حذف"><i class="bx bx-trash text-danger"></i></a>
                                </td>
                            </tr>
                            counter++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

