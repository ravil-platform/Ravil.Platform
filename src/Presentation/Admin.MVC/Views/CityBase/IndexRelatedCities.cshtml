@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ICollection<Domain.Entities.Job.JobBranchRelatedJob>
@{
	ViewData["Title"] = "مرتبط سازی شهر ها";
	ViewData["selected"] = "Cities_IndexRelatedCities";
	int counter = 1;
}

<a asp-controller="CityBase" asp-action="CreateRelatedCities" class="btn btn-success mb-2"> افزودن مورد جدید <i class="bx bx-plus"></i></a>

<section>
	<div class="card">
		<div class="table-responsive">
			<div class="dataTables_wrapper no-footer">
				<table class="table mb-0 table-striped table-hover no-footer">
					<thead class="thead-dark">
						<tr>
							<th>ردیف</th>
							<th>شهر اصلی</th>
							<th>شهر مرتبط</th>
							<th>ترتیب</th>
							<th>عملیات</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@counter</td>
								<td>@item.CurrentCityName</td>
								<td>@item.DisplayedCityName</td>
								<td>@item.Sort</td>
								<td>
									<a asp-controller="CityBase" asp-action="DeleteRelatedCities" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top" data-original-title="حذف"><i class="bx bx-trash text-danger"></i></a>
								</td>
							</tr>
							counter++;
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</section>